{% macro timeleft() %}
    {% set time = app['campaign_stats'].getTimeLeft() %}
    {% if time['days'] > 0 %}
        <strong>{{ time['days'] }}</strong>
        {% trans %}campaign.timeleft.days{% endtrans %}
    {% else %}
        <strong>{{ time['hours'] }}</strong>
        {% trans %}campaign.timeleft.hours{% endtrans %}
    {% endif %}
{% endmacro %}

{% macro fancythumbs(images) %}
{% for img in images %}
    <a class="fancybox" rel="group" href="{{ asset('img/pics/'~img~'.jpg') }}">
        <img src="{{ asset('img/pics/'~img~'_tn.jpg') }}" />
    </a>
{% endfor %}
{% endmacro %}
